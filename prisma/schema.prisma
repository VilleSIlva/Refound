generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



enum Category {
  refeicao
  trasporte
  equipamento
  diversos
}

enum UserRole{
  admin 
  user
}

model User{
  id String @default(uuid()) @id
  name String 
  email String @unique
  password String
  refounds Refounds[]
  role UserRole
  createdat DateTime @default(now()) @map("created_at")
  updatedat DateTime @updatedAt
}

model Refounds{
  id String @default(uuid()) @id
  name String 
  category Category
  filename String
  amount Decimal
  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])
   createdat DateTime @default(now()) @map("created_at")
  updatedat DateTime @updatedAt

  @@map("refounds")
}